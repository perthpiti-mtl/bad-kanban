# Application Configuration
VITE_APP_NAME="BMad Kanban Board"
VITE_APP_VERSION="1.0.0"
VITE_AI_ENABLED="true"

# Environment Configuration
NODE_ENV="development"
LOG_LEVEL="debug"

# Server Configuration
PORT=3000
HOST=0.0.0.0
APP_PORT="5173"
APP_HOST="localhost"

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Development Configuration
# Set to true to enable development features
VITE_DEV_MODE=false
VITE_SOURCEMAP=false

# Performance Configuration
# Memory limit for Node.js process (in MB)
NODE_OPTIONS="--max-old-space-size=512"

# Security Configuration
# Enable HTTPS in production (requires certificates)
HTTPS=false

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Optional: Custom API endpoints (if extending the application)
# VITE_API_BASE_URL=http://localhost:3000/api
# API_RATE_LIMIT=100

# Optional: External service integrations (for future features)
# DATABASE_URL=file:./dev.db
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring and observability (for future features)
# ENABLE_METRICS=false
# METRICS_PORT=9090